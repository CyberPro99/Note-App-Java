<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FBFDFF"
    android:orientation="vertical"
    tools:context=".About_Us">

    <LinearLayout
        android:id="@+id/con"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_margin="30sp"
        android:background="@drawable/list_task_bakc"
        android:orientation="vertical"
        android:keyboardNavigationCluster="true"
        android:elevation="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/vidaloka"
            android:gravity="left"
            android:text="@string/about_us"
            android:textColor="#464647"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_margin="3dp"
            android:fontFamily="@font/amaranth_bold"
            android:padding="5dp"
            android:paddingStart="3dp"
            android:paddingLeft="3dp"
            android:text="@string/discription_Us"
            android:textColor="#656464"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

</LinearLayout>