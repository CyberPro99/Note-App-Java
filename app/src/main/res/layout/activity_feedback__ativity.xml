<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feedback_Ativity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_a_comment"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="15dp"


        />

    <EditText
        android:id="@+id/edit_dis"
        android:layout_width="332dp"
        android:layout_height="215dp"
        android:layout_gravity="center"
        android:layout_marginTop="103dp"
        android:hint="@string/Discrip"
        android:textColorHint="@color/white"
        android:gravity="center"
        android:background="@drawable/sheapedit"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        >

        <com.hsalf.smileyrating.SmileyRating
            android:id="@+id/smile_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <Button
        android:id="@+id/button_send"
        android:layout_width="92dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="@string/send_feed"
        android:textColor="@color/white"
        android:background="@drawable/shaep_b"
        />

</LinearLayout>