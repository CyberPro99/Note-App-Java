<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_detiles"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_photo_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:src="@drawable/profile"
        app:civ_border_color="#D3D3D3"
        app:civ_border_overlay="true"
        app:civ_border_width="1dp"/>

    <Button
        android:id="@+id/Upload_Photo"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:layout_marginStart="280dp"
        android:layout_marginTop="150sp"
        android:background="@drawable/uploade_color_2"
        android:paddingTop="13dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/profile_photo_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:autofillHints="0"
        android:background="@drawable/input_looks"
        android:elevation="10dp"
        android:ems="10"
        android:fontFamily="@font/cairo"
        android:hint="@string/user_name"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:textColor="#6C63FF"
        android:textColorHint="#AAAAAA"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_desc_1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/edit_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:autofillHints="0"
        android:background="@drawable/input_looks"
        android:elevation="10dp"
        android:ems="10"
        android:fontFamily="@font/cairo"
        android:hint="@string/Bio"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:textColor="#6C63FF"
        android:textColorHint="#AAAAAA"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edit_email_3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/edit_desc_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:autofillHints="0"
        android:background="@drawable/input_looks"
        android:elevation="10dp"
        android:ems="10"
        android:fontFamily="@font/cairo"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColor="#6C63FF"
        android:textColorHint="#AAAAAA"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edit_pass_3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/edit_email_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:autofillHints="0"
        android:background="@drawable/input_looks"
        android:elevation="10dp"
        android:ems="10"
        android:fontFamily="@font/cairo"
        android:hint="@string/password"
        android:inputType="numberPassword"
        android:padding="16dp"
        android:textColor="#6C63FF"
        android:textColorHint="#AAAAAA"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Submit_Button_2"
        android:layout_width="100dp"
        android:layout_height="40sp"
        android:layout_below="@id/edit_pass_3"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:background="@drawable/login_btn_background"
        android:fontFamily="@font/cairo"
        android:gravity="center_horizontal"
        android:hint="@string/singup2"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>